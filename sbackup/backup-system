#!/bin/sh
#
# SBackup - rendszer
#
# Lokális gép mentése
#

d=`dirname $0`
. $d/backup-config

cd $LOCALBACKUPDIR

ldir=`ls -A /home`

for f in $SYSDIRTOSAVE; do
	f2=`basename $f`
	rm system-$f2.tar.gz 2>&1 >>/dev/null
	tar rf system-$f2.tar $f 2>>/dev/null >>$LOGDIR/$LOGFILE
	gzip ./system-$f2.tar 2>&1 >>$LOGDIR/$LOGFILE
done

for x in $ldir; do
	if (test -d "/home/$x/.config/chromium/Default/File System"); then
		rm -r  "/home/$x/.config/chromium/Default/File System" 2>>$LOGDIR/$LOGFILE
	fi
	for f in $USERDIRTOSAVE; do
		f2=`echo $f | tr -d '.'`
		rm $x-$f2.tar.gz 2>&1 >>/dev/null
		tar -rf $x-$f2.tar --exclude=chromium /home/$x/$f 2>>/dev/null >>$LOGDIR/$LOGFILE
		gzip ./$x-$f2.tar 2>>$LOGDIR/$LOGFILE >>/dev/null
	done
	if (test -f /home/$x/$BACKUPDIRFILE); then
		for i in `cat /home/$x/$BACKUPDIRFILE`; do
			rm $x-$i.tar.gz 2>&1 >>/dev/null
			tar -rf $x-$i.tar --exclude=chromium /home/$x/$i 2>>/dev/null >>$LOGDIR/$LOGFILE
			gzip -f ./$x-$i.tar 2>>$LOGDIR/$LOGFILE >>/dev/null
		done
	fi
done

cd $TPATH

#
