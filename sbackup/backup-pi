#!/bin/sh
#
# SBackup - rendszer
#
# Lokális gép mentése:
#
# - RaspberryPi mentés web szerverről
#

. ./backup-config

cd $LOCALBACKUPDIR
rm pi*.tar.gz 2>>$LOGFILE

wget -q --no-check-certificate $WEBDOWNLOAD/pi-etc.tar.gz 2>>$LOGFILE
wget -q --no-check-certificate $WEBDOWNLOAD/pi-web.tar.gz 2>>$LOGFILE
wget -q --no-check-certificate $WEBDOWNLOAD/pi-sql.tar.gz 2>>$LOGFILE
wget -q --no-check-certificate $WEBDOWNLOAD/pi-bin.tar.gz 2>>$LOGFILE

cd $PATH

#
